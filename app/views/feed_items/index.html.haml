- content_for :top_panel do
  = render partial: 'hub_feeds/top_panel', locals: { hub: @hub, hub_feed: @hub_feed }
- content_for :tabs do
  = render partial: 'hub_feeds/tabs', locals: { active: 'items' }
- content_for :tab_content do
  .hub-item-view.row
    .alter-views.col-md-12
      Sort by:
      \#{sortable_link('Date tagged', (params[:sort] || 'created_at'), (params[:order] || 'asc'), 'hub_feed_feed_items_path')}
      \#{sortable_link('Date published', (params[:sort] || 'date_published'), (params[:order] || 'asc'), 'hub_feed_feed_items_path')}
  = render partial: 'alter_view', locals: { view: 'list', results: @feed_items }
  %ul.list-unstyled.flush-top
    = render partial: 'list_item', collection: @feed_items, as: :feed_item
  .text-center
    = render partial: 'shared/paginate', object: @feed_items, as: :results

<h1><% if current_user && current_user.is?(:owner,@republished_feed) %>
    <%= link_to('delete', hub_republished_feed_path(@republished_feed), :method => :delete, :confirm => "Are you sure?", :class => 'ui-silk ui-silk-delete inline hover gray', :title => "Delete this item") %>
    <%= link_to('edit', edit_hub_republished_feed_path(@republished_feed), :class => 'ui-silk ui-silk-application-edit inline hover gray', :title => "Edit this item") %>
  <% end %>
  Remixed Feed: <%= @republished_feed %> <sup><%= link_to('rss', items_hub_republished_feed_path(@hub,@republished_feed, :format => :rss)) %> <%= link_to('atom', items_hub_republished_feed_path(@hub,@republished_feed, :format => :atom)) %> <%= link_to('jsonp', items_hub_republished_feed_path(@hub,@republished_feed, :format => :json, :callback => 'callback')) %></sup>
</h1>
<div class="republished_feed detailed tabs" id="republished_feed_<%= @republished_feed.id %>">

  <ul>
    <li><%= link_to 'Items', items_hub_republished_feed_path(@hub,@republished_feed) %></li>
    <li><a href="#about">About</a></li>
    <li><%= link_to 'Inputs', inputs_hub_republished_feed_path(@hub,@republished_feed) %></li>
    <li><%= link_to 'Removals', removals_hub_republished_feed_path(@hub,@republished_feed) %></li>
  </ul>

  <div id="about">
    <%= documentation('republished-feed-about-tab') %>
    <% unless @republished_feed.description.blank? %>
      <div class="description">
        <%= raw(@republished_feed.description) %>
      </div>
    <% end %>
    <div class="metadata">
      <h2>Meta</h2>
      <dl>
        <dt>Owners:</dt>
        <dd><%= @republished_feed.owners.collect{|o| o.username}.join(', ') %></dd>
      </dl>
    </div>
  </div>

</div>
